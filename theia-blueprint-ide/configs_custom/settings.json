{
  "terminal.integrated.defaultProfile.linux": "bash with conda init",
  "terminal.integrated.profiles.linux": {
    "bash with conda init": {
      "path": "/bin/bash",
      "args": ["-c", "export PATH=/opt/conda/bin:/opt/conda/condabin:/opt/conda/bin:$PATH && . /opt/conda/etc/profile.d/conda.sh && conda activate base && bash"],
      "env": {
        "PATH": "/opt/conda/bin:/opt/conda/condabin:/opt/conda/bin:${env:PATH}"
      }
    }    
  }
}
